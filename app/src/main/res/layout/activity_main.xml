<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="330dp"
        android:layout_height="390dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645"
        app:rowCount="3">

        <ImageView
            android:id="@+id/doraemon"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="0"
            app:layout_row="0"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/doraemon"

            />

        <ImageView
            android:id="@+id/doraemo1"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/doraemon"

            />

        <ImageView
            android:id="@+id/doraemon2"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/doraemon" />

        <ImageView
            android:id="@+id/doraemon3"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/doraemon"

            />

        <ImageView
            android:id="@+id/doraemo4"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/doraemon"

            />

        <ImageView
            android:id="@+id/doraemon5"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/doraemon" />

        <ImageView
            android:id="@+id/doraemon6"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/doraemon"

            />

        <ImageView
            android:id="@+id/doraemo7"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/doraemon"

            />

        <ImageView
            android:id="@+id/doraemon8"
            android:layout_width="110dp"
            android:layout_height="130dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/doraemon" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:text="Score : 0"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/timeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="Time : 0"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/scoreText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/scoreText" />
</androidx.constraintlayout.widget.ConstraintLayout>